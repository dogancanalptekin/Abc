@model Abc.MvcWebUI.Models.Cart
@{
    ViewBag.Title = "Index";
}

<style>
    form {
        display: inline-block;
    }
</style>

<div class="container pb-5">
    <div class="row">
        <div class="col-md-12">

            <h2>Alışveriş Sepeti</h2>
            <hr />

            @if (Model.CartLines.Count == 0)
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-circle"></i>
                    Alışveriş Sepetinizde Ürün Bulunmamaktadır.
                </div>
            }
            else
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Quantity</th>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Sub Total</th>
                            <th style="width: 150px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartLines)
                        {
                            <tr>
                                <td>
                                    <img src="~/Upload/@item.Product.Image" width="50" />
                                </td>
                                <td>
                                    @item.Quantity
                                </td>
                                <td>
                                    @item.Product.Name
                                </td>
                                <td>
                                    @item.Product.Price
                                </td>
                                <td>
                                    @((item.Product.Price * item.Quantity).ToString("c"))
                                </td>
                                <td>
                                    @using (Html.BeginForm("RemoveFromCart", "Cart"))
                                    {
                                        @Html.Hidden("Id", item.Product.Id)
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                            Sil
                                        </button>
                                    }
                                    <a href="/Home/Details/@item.Product.Id" class="btn btn-primary btn-sm">
                                        <i class="fas fa-info-circle"></i>
                                        Detay
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5"></td>
                            <td>
                                @Model.Total().ToString("c")
                            </td>
                        </tr>
                    </tfoot>
                </table>
            }
            <div class="text-center">
                <a href="/Home/List" class="btn btn-primary">
                    <i class="fas fa-arrow-circle-left"></i>
                    Alışverişe Devam Et
                </a>
                <a href="/Cart/Checkout" class="btn btn-success">
                    <i class="fas fa-credit-card"></i>
                    Alışverişi Tamamla
                </a>
            </div>
        </div>
    </div>
</div>



